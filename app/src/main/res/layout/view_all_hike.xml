<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:weightSum="10"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="-2dp">

        <LinearLayout
            android:id="@+id/linearView"
            android:paddingLeft="20dp"
            android:layout_width="240dp"
            android:layout_height="125dp"
            android:layout_toEndOf="@+id/imageSearch"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textviewHikeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textviewLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textviewDateStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="DateStart"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textviewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="14dp" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageSearch"
            android:layout_width="85dp"
            android:layout_height="125dp"
            android:paddingLeft="5dp"
            android:src="@drawable/search"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/linearView2"
            android:layout_width="56dp"
            android:layout_height="125dp"
            android:layout_marginStart="-11dp"
            android:layout_toEndOf="@+id/linearView"
            android:orientation="vertical"
            android:padding="5dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageviewEdit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:src="@drawable/edit"

                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageviewDelete"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:padding="1dp"
                android:src="@drawable/delete"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textviewIdHike"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textviewLength"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textviewDateEnd"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textviewPark"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp" />
    <TextView
        android:id="@+id/textviewDifficulty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>